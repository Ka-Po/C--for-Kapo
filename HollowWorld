using System;
using static System.Console;

namespace HollowWorld
{
    class MainClass
        public static void Main(string[] args)
        {
            string name;
            Write("請輸入你的名字：");
            name = ReadLine();
            WriteLine($"你好{name}........");

            ReadKey();                                      //等待你按一次return

            int number;
            Write("請輸入數字：");
            number = int.Parse(ReadLine());                //文字轉成數字型態，伐入到變數
            int x = number + 2;
            WriteLine("你輸入的數字加入2之後等於：" + x);
        }
}


